.user {
    margin: 1.5rem 0;
}
.user .email, .user .text-1, .user .text-2, .user .text-3 {
    margin-bottom: 1rem;
}
.user .btn-delete, .user .btn-edit {
    margin-right: 1rem;
}
.user .btn-edit {
    background: var(--primary-color);
    color: var(--text-light-color);
}
.user .btn-delete {
    background: var(--danger-color);
    color: var(--text-light-color);
}
